{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonJS",
    "lib": ["ES2020"],                   
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "paths": {
       "@/*": ["./*"] 
    },
    "useUnknownInCatchVariables": false,
    "types": ["vitest/globals"],
  },
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register",
      "./index.ts"
    ],
  },
  "include": [
    "./"
  ],
  "exclude": [
    "src/public/*"
  ]
}
