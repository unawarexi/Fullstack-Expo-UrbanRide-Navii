{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonJS",
    "lib": ["ES2020"],                        
    "strict": false,
    "baseUrl": ".",
    "outDir": "temp",
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,    
    "paths": {
     "@/*": ["./*"] 
    },
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "./"
  ],
  "exclude": [
    "tests",
    "src/public/",
    "scripts",
    "eslint.config.ts",
    "vitest.config.js"
  ]
}
